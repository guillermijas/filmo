%h1 Listing films

= link_to 'Recommend film', recommend_film_path, class: 'btn btn-primary', method: :post
%table
  %thead
    %tr
      %th
      %th
      %th
      %th

  %tbody
    - @films.each do |film|
      %tr
        %td= film.title
        %td= link_to 'Show', film
        %td= link_to 'Edit', edit_film_path(film)
        %td= link_to 'Destroy', film, method: :delete, data: { confirm: 'Are you sure?' }
%br

= link_to 'New Film', new_film_path
